@model passion_project.ViewModel.Appointment.AppointmentVM

<style>
    .dropdown {
        width: 100%;
        border-radius: 5px;
        padding: 10px;
    }
</style>

<div class="container mt-5 mb-5">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item"><a asp-controller="Appointment" asp-action="GetAppointmentsByDoctorId" asp-route-id="@Model.DoctorId">Get Appointments</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.PatientFirstName @Model.PatientLastName</li>
        </ol>
    </nav>
    <div class="p-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between mb-2">
                    <h4>@Model.PatientFirstName @Model.PatientLastName</h4>
                </div>
            </div>
            <div class="card-body p-3 box-shadow">
                <div class="row mt-2">
                    <div class="col">
                        <h6>Appointment Date: @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.AppointmentDate))</h6>
                    </div>
                    <div class="col">
                        <h6>Appointment Time: @Model.AppointmentTime</h6>
                    </div>
                </div>
                <br /><br />
                <div class="row">
                    <div class="form-group col">
                        <h6>Appointment Summary</h6>
                        <textarea asp-for="AppointmentSummery" class="form-control" rows="3" stye="width:100%;"></textarea>
                        <span asp-validation-for="AppointmentSummery" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </div>
        </form>
    </div>

</div>


