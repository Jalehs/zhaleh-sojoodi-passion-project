@model passion_project.ViewModel.Patient.PatientVM

@{
    ViewData["Title"] = "Edit";
}

<style>
    .breadcrumb-item li {
        font-size: 16px;
    }

    .breadcrumb-item a {
        color: #5bc0de;
    }
</style>

<div class="container mt-3 mb-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
            @if (User.IsInRole("Admin"))
            {
                <li class="breadcrumb-item"><a asp-controller="Patient" asp-action="Index" asp-route-id="@Model.PatientId">Patients</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.PatientFirstName @Model.PatientLastName</li>
            }
        </ol>
    </nav>
    <div class="card border-info p-3">
        <div class="card-header bg-info text-white mb-2">
            <h2>@Model.PatientFirstName @Model.PatientLastName</h2>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PatientId" />
            <div class="row pl-3 p-2">
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-group col-md-6 col-sm-12">
                        <h6>Health No.:</h6>
                        <input asp-for="Phn" class="form-control" />
                        <span asp-validation-for="Phn" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-6 col-sm-12">
                        <h6>Health No.:</h6>
                        <input asp-for="Phn" class="form-control" readonly />
                        <span asp-validation-for="Phn" class="text-danger"></span>
                    </div>
                }

                @if (User.IsInRole("Admin"))
                {
                    <div class="form-group col-md-6 col-sm-12">
                        <h6>Email Address:</h6>
                        <input asp-for="PatientEmailAddress" class="form-control" />
                        <span asp-validation-for="PatientEmailAddress" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-6 col-sm-12">
                        <h6>Email Address:</h6>
                        <input asp-for="PatientEmailAddress" class="form-control" readonly />
                        <span asp-validation-for="PatientEmailAddress" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="row pl-3 p-2">
                <div class="form-group col-md-6 col-sm-12">
                    <h6>Phone Number:</h6>
                    <input asp-for="PatientPhoneNumber" class="form-control" />
                    <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-sm-12">
                    <h6>Address:</h6>
                    <input asp-for="PatientAddress" class="form-control" />
                    <span asp-validation-for="PatientAddress" class="text-danger"></span>
                </div>

            </div>
            <div class="row pl-3 p-2">
                <div class="form-group col-md-6 col-sm-12">
                    <h6>City:</h6>
                    <input asp-for="PatientCity" class="form-control" />
                    <span asp-validation-for="PatientCity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 col-sm-12">
                    <h6>Postal Code:</h6>
                    <input asp-for="PatientPostalCode" class="form-control" />
                    <span asp-validation-for="PatientPostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row pl-3 p-2">
                <div class="form-group col">
                    <h6>Patient History:</h6>
                    <textarea asp-for="PatientHistory" class="form-control" rows="3" stye="width:100%;"></textarea>
                    <span asp-validation-for="PatientHistory" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ml-3">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}